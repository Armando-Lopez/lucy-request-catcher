{
  "manifest_version": 3,
  "name": "Lucy - Request catcher",
  "version": "1.0.1",
  "description": "Lucy es una araña que vive en tu navegador, tejiendo telarañas y capturando peticiones HTTP",
  "permissions": ["scripting", "storage", "webRequest", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lucy - Request catcher",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lucy-web.js", "helpers.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
